<%- include('partials/header') %>

<div class="top-container">

  <img src="images/profileImg.jpg" alt="profile-image" class="profile-image">
  <div class="notify">
    <p class="nine" style="color: #fff">9</p>
  </div>
  <h2 class="hi">Hi, <%= userName %></h2><br/><br />
  <p class="email"> <%= userMail %></p>

  <h3 class="dashboard">Dashboard</h3>
  <h3 class="gast">Gastos</h3>
  <h3 class="bill">Billetera</h3>
  <h3 class="resume">Resumen</h3>
  <h3 class="cue">Cuentas</h3>
  <h3 class="config">Configuracion</h3>

  <a href="#link" class="btn btn-info btn-dark login w-68" role="button" data-bs-toggle="modal" data-bs-target="#exampleModal"> <%= userLog %> </a>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="width: 476px;
    height: 581px;">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">SMOKE</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email address</label>
              <input type="email" class="form-control" name="email" style="border: none;
              border-bottom: 1px solid #ccc">
            </div>
            <br />
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password" style="border: none;
              border-bottom: 1px solid #ccc;">
              <small class="form-text text-muted">Forgot Your Password?</small>
            </div>
            <br />
            <button type="submit" class="btn btn-dark w-100">Enter</button>
          </form>

        </div>
      </div>
    </div>
  </div>

  <div class="middle-container">
    <h1 class="title-dashboard">Dashboard</h1>
    <p class="date">01 - 15 July, 2022</p>

    <h5 class="hoy">Hoy</h5><br />
    <hr class="line">

    <i class="fa-solid fa-cart-shopping fa-icon1"></i>
    <h4 class="title1">Compras</h4>
    <h4 class="price1">-320.000</h4>
    <p class="subtitle1">5:12 pm . Fortis Luque</p>

    <i class="fa-solid fa-bus-simple fa-icon2"></i>
    <h4 class="title2">Transporte</h4>
    <h4 class="price2">-15.000</h4>
    <p class="subtitle2">5:12 pm . Bolt hasta trabajo</p>

    <i class="fa-solid fa-house fa-icon3"></i>
    <h4 class="title3">Casa</h4>
    <h4 class="price3">-180.000</h4>
    <p class="subtitle3">5:12 pm . Remodelacion pared</p>

    <h5 class="hoy1">Lunes, 11 July 2022</h5>
    <hr class="line1">

    <i class="fa-solid fa-bowl-food fa-icon4"></i>
    <h4 class="title4">Comida</h4>
    <h4 class="price4">-150.000</h4>
    <p class="subtitle4">5:12 pm . Plaza Madero</p>

    <i class="fa-solid fa-circle-play fa-icon5"></i>
    <h4 class="title5">Entretenimiento</h4>
    <h4 class="price5">-70.000</h4>
    <p class="subtitle5">5:12 pm . Cine Itau dei Sol</p>

  </div>
  <div class="bottom-container">
    <h1 class="bottom-title">Spend Statistics:</h1>

    <h3 class="t-1">Comida</h3>
    <p class="pr-1">900.000</p>

    <div class="progress progress-sm pg1">
      <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <h3 class="t-2">Shopping</h3>
    <p class="pr-2">1.300.000</p>
    <div class="progress progress-sm pg2">
      <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"></div>
    </div>


    <h3 class="t-3">Casa</h3>
    <p class="pr-3">1.100.000</p>
    <div class="progress progress-sm pg3">
      <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <h3 class="t-4">Entretenimiento</h3>
    <p class="pr-4">450.000</p>
    <div class="progress progress-sm pg4">
      <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <h3 class="t-5">Vehiculo</h3>
    <p class="pr-5">520.000</p>
    <div class="progress progress-sm pg5">
      <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="2" aria-valuemin="0" aria-valuemax="100"></div>
    </div>


    <div class="container-fluid text-light">
      <div class="container p-2 jumbo" style="width: 85%; border-radius: 8%;">
        <img src="images/suitcase" alt="suitcase" style="width: 30%;
          height: 30%;">
        <img src="images/plant.jpg" alt="plant" style="width: 30%;
          height: 30%;">
        <h3 class=" jumbo-title">Como ahorrar</h3>
        <p class="jumbo-p">Activa este m√©todo para <br />
          realizar ahorros y verifica los <br>
          procesos que te beneficien</p>
        <a href="#" class="btn btn-dark w-50">SEND TIPS</a>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
